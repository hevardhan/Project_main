#profile page
MDScreen:
    name: 'profile'
    MDFloatLayout:
        MDTopAppBar:
            title: 'Profile'
            md_bg_color: "#2fb9ea"
            left_action_items: [["arrow-left-drop-circle", lambda x: app.home()]]
            elevation: 0
            pos_hint: {'center_x': 0.5,'center_y': 0.95}
        Image:
            source: "assets/profile2.png"
            pos_hint: {'center_x': 0.5,'center_y': 0.75}
        MDLabel:
            text: "NAME"
            font_size: "25sp"
            pos_hint: {'center_x': .5,'center_y': 0.65}
            halign: "center"

        MDLabel:
            text: 'USERNAME'
            font_name: 'assets/Poppins-Medium'
            font_size: '20sp'
            pos_hint:{'center_y': .50,'center_x':.6}
            color: "grey"

        MDLabel:
            text: 'E-MAIL ADDRESS'
            font_name: 'assets/Poppins-Medium'
            font_size: '20sp'
            pos_hint: {'center_y': .40, 'center_x': .6}
            color: "grey"

        MDRaisedButton:
            text: 'LOGOUT'
            size_hint: 0.66,0.065
            pos_hint: {'center_x': 0.5,'center_y': .18}
            md_bg_color: rgba(52,0,231,255)
            font_name: "assets/Poppins-Bold"
            on_release: app.create_user()
            pos: self.pos