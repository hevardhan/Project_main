<Card>
    orientation: 'vertical'
    radius: 15
    padding: '8dp'
    size_hint: None, None
    size: "180dp", "170dp"
    ripple_behavior: True
    Image:
        source: root.source
    MDLabel:
        text: root.text
        halign: 'center'
        font_size: '13sp'
        adaptive_height: True
        font_name: 'assets/Poppins-Medium'
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
MDScreen:
    name: 'home2'
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDFloatLayout:
                    orientation: 'vertical'
                    FitImage:
                        source: 'assets/bg.jpg'
                    MDIconButton:
                        icon: "assets/menu.png"
                        md_bg_color: 'white'
                        pos_hint: {'center_x': .90,'center_y':.95}
                        on_release:nav_drawer.set_state('toggle')
                    MDLabel:
                        text: 'Good Morning,'
                        font_name: 'assets/Poppins-Medium'
                        font_size: '17sp'
                        pos_hint: {'center_y': 0.95}
                        padding_x: "24dp"
                        adaptive_height: True
                    MDLabel:
                        text: " "
                        id: name
                        font_name: 'assets/Poppins-Medium'
                        font_size: '27sp'
                        pos_hint: {'center_y': 0.91}
                        padding_x: "24dp"
                        adaptive_height: True
                    MDGridLayout:
                        size_hint_y: None
                        size_hint_x: None
                        height: 1*(root.height/3)
                        width: root.width
                        rows:1
                        cols:1
                        spacing: "18dp"
                        padding: "24dp"
                        pos_hint: {'center_y':.65}
                        MDCard:
                            elevation: 3
                            radius: 30
                            md_bg_color: "#010729"
                            MDRelativeLayout:
                                Image:
                                    source:"assets/chip2.png"
                                    pos_hint:{'center_y': .5,'center_x':.875}
                                MDIcon:
                                    icon:"currency-rupee"
                                    pos_hint:{'center_y':.65,'center_x':.1}
                                    font_size: '25sp'
                                    color: "white"
                                MDLabel:
                                    text: '200000'
                                    id: balance
                                    color: "white"
                                    font_name: 'assets/Poppins-Medium'
                                    font_size: '25sp'
                                    pos_hint:{'center_y': .65,'center_x':.65}
                                    adaptive_height: True
                                MDLabel:
                                    text: 'Balance'
                                    font_name: 'assets/Poppins-Medium'
                                    font_size: '12sp'
                                    pos_hint:{'center_y': .85,'center_x':.6}
                                    color: "grey"
                                MDLabel:
                                    text: '**** **** **** 1 0 1 0'
                                    font_name: 'assets/Techfont'
                                    font_size: '15sp'
                                    pos_hint:{'center_y': .425,'center_x':.6}
                                    adaptive_height: True
                                    color: "white"
                                MDLabel:
                                    text: 'Spend'
                                    font_name: 'assets/Poppins-Medium'
                                    font_size: '12sp'
                                    pos_hint:{'center_y': .3,'center_x':.6}
                                    adaptive_height: True
                                    color: "grey"
                                MDIcon:
                                    icon:"currency-rupee"
                                    pos_hint:{'center_y':.15,'center_x':.1}
                                    font_size: '12sp'
                                    color: "white"
                                MDLabel:
                                    text: '200000'
                                    color: "white"
                                    font_name: 'assets/Poppins-Medium'
                                    font_size: '12sp'
                                    pos_hint:{'center_y': .15,'center_x':.65}
                                    adaptive_height: True
                                    
                    MDLabel:
                        text: "Activities :"
                        font_name: 'assets/Poppins-Medium'
                        font_size: '20sp'
                        pos_hint: {'center_y': 0.4}
                        adaptive_height: True  
                        padding_x: "24dp" 
                    MDFloatLayout:
                        size_hint: None,None
                        size: root.width, 400
                        orientation: 'vertical'
                        ScrollView:
                            do_scroll_x: True
                            do_scroll_y: False
                            MDGridLayout:
                                size_hint_x: None
                                width: self.minimum_width
                                spacing: 10
                                padding: 10
                                rows: 1
                                Card:
                                    source: 'assets/btn.png'
                                    text: 'Daily Expenses'
                                    on_release: app.btn1()
                                Card:
                                    source: 'assets/btn21.png'
                                    text: 'Balance and History'
                                Card:
                                    source: 'assets/btn31.png'
                                    text: 'Reports'
                                Card:
                                    source: 'assets/btn4.png'
                                    text: 'More'
                    MDFloatingActionButton:
                        icon:"plus"
                        md_bg_color: rgba(52,0,231,255)
                        pos_hint: {'center_x': .90,'center_y':.15}
                        on_release: app.open_dialog()
        MDNavigationDrawer:
            id: nav_drawer
            anchor: 'right'
            radius: [30,0,0,30]

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Budget Buddy"
                    title_color: "#4a4939"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Options"

                DrawerClickableItem:
                    icon: "cog"
                    text: "Settings"

                DrawerClickableItem:
                    icon: "account"
                    text: "Profile"
                
                DrawerClickableItem:
                    icon: "alert"
                    text: "Report"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "About"

                DrawerLabelItem:
                    icon: "information-outline"
                    text: "Version"
                    right_text: '1.2.0'