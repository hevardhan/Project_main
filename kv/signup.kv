MDScreen:
    name: 'sign-up'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_y':0.95}
            on_release: app.startup()
        MDLabel:
            text: "H i !"
            font_name: "assets/Poppins-Bold"
            font_size: "25sp"
            pos_hint: {'center_x':0.5,'center_y':0.9}
            padding_x: 30
        MDLabel:
            text: "Create a new account"
            font_name: "assets/Poppins-Medium"
            font_size: "15sp"
            pos_hint: {'center_x':0.5,'center_y':0.85}
            padding_x: 30
            color: "grey"
        MDTextField:
            id: user
            hint_text: "Username"
            pos_hint: {'center_x': .5, 'center_y': .75}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        MDTextField:
            id: dname
            hint_text: "Display Name"
            pos_hint: {'center_x': .5, 'center_y': .65}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False

        MDTextField:
            id: email
            hint_text: "Email"
            pos_hint: {'center_x': .5, 'center_y': .55}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        MDTextField:
            id: pwd
            hint_text: "Password"
            pos_hint: {'center_x': .5, 'center_y': .45}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
            password: True
        MDTextField:
            id: cpwd
            hint_text: "Confirm Password"
            pos_hint: {'center_x': .5, 'center_y': .35}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        MDRaisedButton:
            text: 'SIGNUP'
            size_hint: 0.66,0.065
            pos_hint: {'center_x': 0.5,'center_y': .18}
            md_bg_color: rgba(52,0,231,255)
            font_name: "assets/Poppins-Bold"
            on_release: app.create_user()
            pos: self.pos