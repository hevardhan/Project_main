MDScreen:
    name: 'sign-up'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_y':0.95}
            on_release: app.startup()
        MDLabel:
            text: "H i !"
            font_name: "assets/Poppins-Bold"
            font_size: "25sp"
            pos_hint: {'center_x':0.5,'center_y':0.85}
            padding_x: 30
        MDLabel:
            text: "Create a new account"
            font_name: "assets/Poppins-Medium"
            font_size: "15sp"
            pos_hint: {'center_x':0.5,'center_y':0.79}
            padding_x: 30
            color: "grey"
        MDTextField:
            id: user
            hint_text: "Name"
            pos_hint: {'center_x': .5, 'center_y': .675}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        MDTextField:
            id: email
            hint_text: "Email"
            pos_hint: {'center_x': .5, 'center_y': .55}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        MDTextField:
            id: pwd
            hint_text: "Password"
            pos_hint: {'center_x': .5, 'center_y': .425}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
            password: True
        Button:
            text: 'SIGNUP'
            size_hint: 0.66,0.065
            pos_hint: {'center_x': 0.5,'center_y': .30}
            background_color: 0,0,0,0
            font_name: "assets/Poppins-Bold"
            on_release: app.create_user()
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDLabel:
            text: 'or'
            color: rgba(52,0,231,255)
            pos_hint: {'center_y': .22}
            font_size: '13sp'
            font_name: 'assets/Poppins-Bold'
            halign: 'center'
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)   
            size_hint: .3, .002
            pos_hint: {'center_x':.3,'center_y':.218}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)   
            size_hint: .3, .002
            pos_hint: {'center_x':.7,'center_y':.218}   
        MDLabel:
            text: 'Social Media Login'
            font_name: 'assets/Poppins-Bold'
            font_size: '13sp'
            halign: 'center'
            pos_hint: {'center_y':.16} 
            color: rgba(135,135,193,255)
        MDGridLayout:
            cols:3
            size_hint: .70, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: 'assets/google.png'
            Image:
                source: 'assets/fb.png'
            Image:
                source: 'assets/apple.png'