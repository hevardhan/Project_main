MDScreen:
    name: 'forgot-pass'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:'arrow-left'
            pos_hint: {'center_y':0.95}
            on_release: app.login()
        MDLabel:
            text: "Forgot Password"
            font_name: "assets/Poppins-Bold"
            font_size: "25sp"
            pos_hint: {'center_x':0.5,'center_y':0.85}
            padding_x: 30
        MDLabel:
            text: "Enter Email ID"
            font_name: "assets/Poppins-Medium"
            font_size: "15sp"
            pos_hint: {'center_x':0.5,'center_y':0.78}
            padding_x: 30
            color: "grey"    
        MDTextField:
            id: email
            hint_text: "Email ID"
            pos_hint: {'center_x': .5, 'center_y': .60}
            text_color_focus: rgba(0,0,59,255)
            font_name: "assets/Poppins-Medium"
            font_size: "20sp"
            size_hint_x: 0.8
            anchor: "left"
            color_mode: 'custom'
            line_color_focus: rgba(0,0,59,255)
            hint_text_color_focus: rgba(0,0,59,255)
            multiline: False
        Button:
            text: 'Sent Resent Link'
            size_hint: 0.66,0.065
            pos_hint: {'center_x': 0.5,'center_y': .30}
            background_color: 0,0,0,0
            font_name: "assets/Poppins-Bold"
            on_release: app.login()

            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

