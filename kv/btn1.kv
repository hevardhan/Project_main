#:import dt database
#:import date.today datetime
MDScreen:
    name: 'btn1'
    MDFloatLayout:
        FitImage:
            source: 'assets/bg2.jpg'
        MDIconButton:
            icon: 'keyboard-backspace'
            on_release: app.home()
            pos_hint: {'center_y': .95,'center_x':.1}
            font_size: "50dp"
        MDLabel:
            text: 'Daily Expenses :'
            pos_hint: {'center_y': .90}
            padding_x: 30
            font_name: 'assets/Poppins-Medium'
        MDFloatLayout:
            md_bg_color: "#f6f6f6"
            spacing: '18dp'
            padding: '24dp'
            size_hint_y: None
            size_hint_x: None
            height: 2*(root.height/3)
            width: 6*(root.width/7)
            pos_hint: {'center_y': .5,'center_x': .5}
            MDIcon:
                icon: 'calendar'
                pos_hint:{'center_x':.1,'center_y':.9}
            MDLabel:
                id: btn_date
                text: dt.display_date(date.today())
                font_name: 'assets/Poppins-Medium'
                pos_hint:{'center_x':.7,'center_y':.9}
            MDIconButton:
                icon: "pencil"
                pos_hint: {'center_x':0.9,'center_y':0.9}
                font_size: "5sp" 
                on_release: app.show_date_picker_btn1() 