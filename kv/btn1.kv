#:import dt database
#:import date.today datetime
<Card>
    orientation: 'vertical'
    radius: 15
    padding: '8dp'
    size_hint: None, None
    size: "180dp", "170dp"
    ripple_behavior: True
    color: 'red'
    Image:
        source: root.source
    MDLabel:
        text: root.text
        halign: 'center'
        font_size: '13sp'
        adaptive_height: True
        font_name: 'assets/Poppins-Medium'
MDScreen:
    name: 'btn1'
    MDFloatLayout:
        FitImage:
            source: 'assets/bg_d.jpg'
        MDIconButton:
            icon: 'keyboard-backspace'
            on_release: app.home()
            pos_hint: {'center_y': .95,'center_x':.1}
            font_size: "50dp"
        MDLabel:
            text: 'Daily Expenses :'
            pos_hint: {'center_y': .90}
            padding_x: 30
            font_name: 'assets/Poppins-Medium'
        MDFloatLayout:
            md_bg_color: "#f6f6f6"
            spacing: '18dp'
            padding: '24dp'
            size_hint_y: None
            size_hint_x: None
            height: 5*(root.height/6)
            width: 6*(root.width/7)
            pos_hint: {'center_y': .45,'center_x': .5}
            MDIcon:
                icon: 'calendar'
                pos_hint:{'center_x':.1,'center_y':.925}
            MDLabel:
                id: btn_date
                text: dt.display_date(date.today())
                font_name: 'assets/Poppins-Medium'
                pos_hint:{'center_x':.7,'center_y':.925}
            MDIconButton:
                icon: "pencil"
                pos_hint: {'center_x':0.9,'center_y':0.925}
                font_size: "5sp" 
                on_release: app.show_date_picker_btn1() 
            MDBoxLayout:
                size_hint: None,None
                size: 250, 475
                orientation: 'vertical'
                padding: '20dp'
                pos_hint: {'center_x':.5,'center_y':.45}
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDGridLayout:
                        size_hint_y: None
                        height: self.minimum_height
                        id: md_list
                        cols:1
                        rows: 1
                        spacing: 10
                        padding: 10