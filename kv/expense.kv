MDScreen:
    name: 'expense'
    MDFloatLayout:
        FitImage:
            source: 'assets/bg3.jpg'
        MDIconButton:
            icon: 'keyboard-backspace'
            on_release: app.home()
            pos_hint: {'center_y': .95,'center_x':.1}
            font_size: "50dp"
        MDLabel:
            text: 'Add Expense'
            pos_hint: {'center_y': .8,'center_x': .5}
            font_name: 'assets/Poppins-Medium'
            font_size: "30dp"
            halign: "center"
        MDGridLayout:
            size_hint_y: None
            size_hint_x: None
            height: 2*(root.height/3)
            width: root.width
            rows:1
            cols:1
            MDCard:
                radius: [30,30,0,0]
                MDRelativeLayout:
                    MDLabel:
                        text: 'Amount :'
                        pos_hint: {'center_y': .9}
                        padding_x: 30
                        font_name: 'assets/Poppins-Medium'
                    MDTextField:
                        id: amount
                        pos_hint: {'center_x': .5, 'center_y': .82}
                        text_color_focus: rgba(0,0,59,255)
                        font_name: "assets/Poppins-Medium"
                        font_size: "20sp"
                        size_hint_x: 0.8
                        anchor: "left"
                        color_mode: 'custom'
                        line_color_focus: rgba(0,0,59,255)
                        hint_text_color_focus: rgba(0,0,59,255)
                        multiline: False
                        input_filter: 'int'
                        input_type: 'number'
                    MDLabel:
                        text: 'Description :'
                        pos_hint: {'center_y': .675}
                        padding_x: 30
                        font_name: 'assets/Poppins-Medium'
                    MDTextField:
                        id: descp
                        pos_hint: {'center_x': .5, 'center_y': .6}
                        text_color_focus: rgba(0,0,59,255)
                        font_name: "assets/Poppins-Medium"
                        font_size: "17sp"
                        size_hint_x: 0.8
                        anchor: "left"
                        color_mode: 'custom'
                        line_color_focus: rgba(0,0,59,255)
                        hint_text_color_focus: rgba(0,0,59,255)
                        multiline: False
                        max_text_length: 50
                    MDLabel:
                        text: "Categories :"
                        font_name: 'assets/Poppins-Medium'
                        pos_hint:{'center_y':.5}
                        padding_x: 30
                    MDLabel:
                        text: "Select Category"
                        pos_hint:{'center_y':.4}
                        padding_x: 30
                        halign: "left"    
                        font_name: 'assets/Poppins-Medium'
                        font_size: "15dp"
                        text_color: "black"
                    # MDFloatLayout:
                    #     md_bg_color: rgba(178,178,178,255)   
                    #     size_hint: .4, .002
                    #     pos_hint: {'center_x':.630,'center_y':.38}
                    MDLabel:
                        text: "Select Date :"
                        font_name: 'assets/Poppins-Medium'
                        pos_hint:{'center_y':.3}
                        padding_x: 30
                    MDRaisedButton:
                        id: date_disp
                        text: 'dd-mm-yyyy'
                        text_color_focus: rgba(0,0,59,255)
                        font_name: "assets/Poppins-Medium"
                        font_size: "15sp"
                        pos_hint:{'center_x':.8,'center_y':.3}
                        md_bg_color: "#E5E4E2"
                        on_release: app.show_date_picker_expense()
                    MDRaisedButton:
                        text: "Done"
                        pos_hint: {'center_x': 0.5,'center_y': 0.12}
                        md_bg_color: rgba(52,0,231,255)
                        font_name: "assets/Poppins-Bold"
                        increment_width: "164dp"
                        on_release: app.add_expense()
